<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:views="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_height">
    <ImageView
        android:id="@+id/image_view_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bob"
        android:layout_gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="16dp"
        android:layout_centerVertical="true"
        android:scaleX="0.9"
        android:scaleY="0.9"
        />
    <com.lchpartners.views.NamsanTextView
        android:id="@+id/text_view_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_view_category"
        android:layout_centerVertical="true"
        android:singleLine="false"
        views:weight="light"
        android:textSize="19.5sp"
        android:textColor="@android:color/black"
        />
</RelativeLayout>