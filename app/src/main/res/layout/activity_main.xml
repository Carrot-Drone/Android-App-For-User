<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_below="@id/pager"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/shadal_default">
        <ImageButton
            android:id="@+id/button_tab_main"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/selector_bot_ic_main"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button_tab_favorite"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/selector_bot_ic_star"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button_tab_random"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/selector_bot_ic_random"
            android:background="@android:color/transparent"/>
        <ImageButton
            android:id="@+id/button_tab_more"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/selector_bot_ic_more"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>
