<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listview_height"
    android:gravity="left"
    android:orientation="horizontal" >

    <com.lchpartners.views.NamsanTextView
        android:id = "@+id/restaurant_name"
        android:layout_width = "wrap_content"
        android:layout_height= "wrap_content"
        android:paddingLeft="20dp"
        android:textColor="@android:color/black"
        android:textSize="19.5sp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"/>
    
    <ImageView
        android:id="@+id/flyer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listview_height"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:layout_toRightOf="@id/restaurant_name"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/flyer" />
    
    <ImageView
        android:id="@+id/coupon"
        android:layout_width="wrap_content"
        android:layout_height="20sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/flyer"
        android:layout_marginLeft="5dp"
        android:src="@drawable/star_on_list" />
    
</RelativeLayout>