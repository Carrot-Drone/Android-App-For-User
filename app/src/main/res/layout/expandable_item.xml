<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:views="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lchpartners.views.NamsanTextView
        android:id="@+id/text_view_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listview_height"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center_vertical"
        android:text="@string/app_name"
        android:textSize="15.5sp"
        views:weight="medium"
        android:textColor="@android:color/black"/>

    <com.lchpartners.views.NamsanTextView
        android:id="@+id/text_view_menu_name"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/text_view_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listview_height"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:maxLines="3"
        views:weight="bold"
        android:text="@string/title_menu"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

</RelativeLayout>
